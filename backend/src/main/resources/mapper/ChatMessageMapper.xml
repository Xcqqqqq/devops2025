<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.personalAgentPlatform.module.chat.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.demo.personalAgentPlatform.module.chat.entity.ChatMessage">
        <id column="id" property="id"/>
        <result column="sessionId" property="sessionId"/>
        <result column="role" property="role"/>
        <result column="content" property="content"/>
        <result column="model" property="model"/>
        <result column="time" property="time"/>
    </resultMap>

    <insert id="insert" parameterType="com.demo.personalAgentPlatform.module.chat.entity.ChatMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_message (
            sessionId,
            role,
            content,
            model,
            time
        ) VALUES (
            #{sessionId},
            #{role},
            #{content},
            #{model},
            #{time}
        );
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM chat_message WHERE id = #{id};
    </select>

    <select id="selectBySessionId" resultMap="BaseResultMap">
        SELECT * FROM chat_message 
        WHERE sessionId = #{sessionId}
        ORDER BY time ASC
        LIMIT #{offset}, #{limit};
    </select>

    <select id="countBySessionId" resultType="int">
        SELECT COUNT(*) FROM chat_message 
        WHERE sessionId = #{sessionId};
    </select>

    <delete id="deleteBySessionId">
        DELETE FROM chat_message WHERE sessionId = #{sessionId};
    </delete>
</mapper>