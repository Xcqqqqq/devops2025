<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.aihealthtool.module.chat.mapper.ChatMessageMapper">

    <resultMap id="BaseResultMap" type="com.demo.aihealthtool.module.chat.entity.ChatMessage">
        <id column="id" property="id"/>
        <result column="session_id" property="sessionId"/>
        <result column="role" property="role"/>
        <result column="content" property="content"/>
        <result column="model" property="model"/>
        <result column="created_at" property="createdAt"/>
    </resultMap>

    <insert id="insert" parameterType="com.demo.aihealthtool.module.chat.entity.ChatMessage" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO chat_message (
            session_id,
            role,
            content,
            model,
            created_at
        ) VALUES (
            #{sessionId},
            #{role},
            #{content},
            #{model},
            #{createdAt}
        );
    </insert>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT * FROM chat_message WHERE id = #{id};
    </select>

    <select id="selectBySessionId" resultMap="BaseResultMap">
        SELECT * FROM chat_message 
        WHERE session_id = #{sessionId}
        ORDER BY created_at ASC
        LIMIT #{offset}, #{limit};
    </select>

    <select id="countBySessionId" resultType="int">
        SELECT COUNT(*) FROM chat_message 
        WHERE session_id = #{sessionId};
    </select>

    <delete id="deleteBySessionId">
        DELETE FROM chat_message WHERE session_id = #{sessionId};
    </delete>
</mapper>