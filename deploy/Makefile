# ==================== éƒ¨ç½²å‘½ä»¤ ====================
deploy:
	@echo "ğŸš€ å¼€å§‹ä¸€é”®éƒ¨ç½²..."
	@./deploy.sh

# ==================== æ„å»ºå‘½ä»¤ ====================
build:
	@echo "ğŸ“¦ æ„å»ºæ‰€æœ‰æœåŠ¡é•œåƒ..."
	@docker-compose build

build-backend:
	@echo "ğŸ“¦ æ„å»ºåç«¯é•œåƒ..."
	@docker-compose build backend

build-frontend:
	@echo "ğŸ“¦ æ„å»ºå‰ç«¯é•œåƒ..."
	@docker-compose build frontend

# ==================== æœåŠ¡æ§åˆ¶ ====================
start:
	@echo "â–¶ï¸  å¯åŠ¨æ‰€æœ‰æœåŠ¡..."
	@docker-compose up -d
	@echo "âœ… æœåŠ¡å·²å¯åŠ¨ï¼"
	@docker-compose ps

stop:
	@echo "â¹ï¸  åœæ­¢æ‰€æœ‰æœåŠ¡..."
	@docker-compose down
	@echo "âœ… æœåŠ¡å·²åœæ­¢ï¼"

restart: stop
	@sleep 2
	@$(MAKE) start

ps:
	@docker-compose ps

# ==================== æ—¥å¿—æŸ¥çœ‹ ====================
logs:
	@docker-compose logs -f

logs-backend:
	@docker-compose logs -f backend

logs-frontend:
	@docker-compose logs -f frontend

logs-mysql:
	@docker-compose logs -f mysql

# ==================== è¿ç»´ç®¡ç† ====================
status:
	@echo "========================================"
	@echo "æœåŠ¡å¥åº·çŠ¶æ€æ£€æŸ¥"
	@echo "========================================"
	@docker-compose ps
	@echo ""
	@echo "å®¹å™¨èµ„æºä½¿ç”¨ï¼š"
	@docker stats --no-stream --format "table {{.Name}}\t{{.CPUPerc}}\t{{.MemUsage}}" $$(docker-compose ps -q)

backup:
	@echo "ğŸ’¾ å¤‡ä»½æ•°æ®åº“..."
	@mkdir -p backups
	@docker-compose exec -T mysql mysqldump -uroot -p$${MYSQL_ROOT_PASSWORD} $${MYSQL_DATABASE} > backups/backup_$$(date +%Y%m%d_%H%M%S).sql
	@echo "âœ… å¤‡ä»½å®Œæˆï¼æ–‡ä»¶ä¿å­˜åœ¨ backups/ ç›®å½•"

clean:
	@echo "ğŸ—‘ï¸  æ¸…ç†æ‰€æœ‰å®¹å™¨ã€é•œåƒå’Œæ•°æ®å·..."
	@read -p "ç¡®è®¤è¦æ¸…ç†å—ï¼Ÿè¿™å°†åˆ é™¤æ‰€æœ‰æ•°æ®ï¼(yes/no): " confirm; \
	if [ "$$confirm" = "yes" ]; then \
		docker-compose down --rmi all --volumes --remove-orphans; \
		echo "âœ… æ¸…ç†å®Œæˆï¼"; \
	else \
		echo "âŒ å–æ¶ˆæ¸…ç†"; \
	fi